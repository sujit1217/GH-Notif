<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <!-- Define the background shape -->
            <solid android:color="#00ACC1" />
            <corners android:radius="10dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!-- Define the progress shape -->
                <solid android:color="#1E88E5" />
                <corners android:radius="10dp" /> <!-- Adjust the radius to match the background -->
            </shape>
        </clip>
    </item>
</layer-list>
